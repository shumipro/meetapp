/*! Mobile */
@media (max-width: 768px)

    .ma-layout-wrap
        padding 20px 12px

        /* list page */     
        .ma-layout
            .ma-layout-col-left
                float none
                width 100%
                padding 0
                
            .ma-layout-col-right
                float none
                width 100%
                padding 0

            .ma-app-list-item
                &>a
                    height auto
                
                .ma-app-list-item-image
                    float none
                    width 100%
                    max-width 160px
                    margin 0 auto

                .ma-app-list-item-content
                    margin-left 0
                
                .ma-app-list-item-toolbar
                    position static
                    
        .ma-white-wrap
            padding 20px 12px
            
        /* Table */
        dl
            dt
                float none
                padding 0
                
            dd
                margin 0
            
    /* Login drop down */
    .navbar-default .navbar-nav .open .ma-login-dropdown.dropdown-menu>li>a
        color #fff
    
    /* for top page */    
    .ma-app-tag
        margin 20px
        
    .section-heading h1
        font-size 24px
    
    .section-heading h3
        font-size 20px
    h4
        font-size 16px
    
    .FbBtnLabel
        font-size 13px
     
    /* resized backgroud */   
    .ma-top-banner
        background-image url('/img/mobile/top_bg1.png')

    .ma-section-bg
        height 240px
        
    #ma-about-bg1
        &:before
            background-image url('/img/mobile/about_bg1.png')
        
    #ma-about-bg2
        &:before
            background-image url('/img/mobile/about_bg2.png')

    /* register */
    form
        .form-group
            float none
            width 100%
            
    /* tile */
    .ma-app-tile-wrap
        .ma-app-tile
            min-width 120px

        .ma-app-tile-image
            height 100px
            line-height 100px

            img 
                max-width 118px
                max-height 98px

    /* edit */
    .ma-app-edit-btn,
    .ma-profile-edit-update-btn
        margin-bottom 16px